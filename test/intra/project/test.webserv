log {
	info 1
	warning 1
	error 1
	verbose 0
}

media default

server {
    address 0.0.0.0:8080
    root .

    location {
        remote /
        local /www
        methods GET
        index index.html
    }

    location {
        remote /put_test
        local /var/put_test
        methods PUT
    }

    location {
        remote /post_body
        local /var/post_body
        methods POST
        max_client_body_size 100
    }

    location {
        remote /directory
        local /www/YoupiBanane
        methods GET
        index youpi.bad_extension
    }

    location {
		remote /directory/*.bla
		local /www/YoupiBanane
		methods GET POST
		cgi_enable
		cgi_forward /cgi-bin/cgi_tester
    }

	location {
		remote /cgi
		local /cgi-bin
		methods GET POST
		cgi_enable
	}
}
